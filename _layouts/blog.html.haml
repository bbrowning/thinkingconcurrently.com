---
layout: base
---

.post_navigation
  - if page.previous_post
    .previous_post
      Previous:
      %a{:href => page.previous_post.url}
        = page.previous_post.title
  - if page.next_post
    .next_post
      Next:
      %a{:href => page.next_post.url}
        = page.next_post.title
.post
  %h2
    = page.title
  %h3
    = page.date.strftime('%A %B %d')
  .content
    ~page.content
  .comments
